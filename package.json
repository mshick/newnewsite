{
  "name": "shick.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "dotenv -e .env.local -e .env contentlayer build && npm run generate:search-index",
    "build": "next build",
    "predev": "dotenv -e .env.local -e .env contentlayer build && npm run generate:search-index",
