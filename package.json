    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.md",
          "*.mdx"
        ],
        "options": {
          "proseWrap": "preserve"
        }
      }
    ]
  },
