{
  "name": "shick.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "contentlayer build && npm run generate:search-index",
    "build": "next build",
    "predev": "contentlayer build && npm run generate:search-index",
    "dev": "next dev",
    "generate:search-index": "./scripts/generate-search-index.mjs",
    "lint": "next lint",
    "start": "next start",
    "test": "npm run lint && npm run typecheck",
    "typecheck": "tsc --noEmit"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "printWidth": 80,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.md",
          "*.mdx"
        ],
        "options": {
          "proseWrap": "preserve"
        }
      }
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 12
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "scripts/**/*"
        ],
        "rules": {
          "no-console": "off"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "plugins": [
          "json-format"
        ]
      },
      {
        "files": [
          "*.mdx",
          "*.md"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": "plugin:mdx/recommended"
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "package-lock.json"
  ],
  "dependencies": {
    "@contentlayer/utils": "^0.2.6",
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@sentry/nextjs": "^7.7.0",
    "contentlayer": "^0.2.6",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.6",
    "hastscript": "^7.0.2",
    "image-size": "^1.0.2",
    "jose": "^4.8.3",
    "jotai": "^1.7.4",
    "minisearch": "^5.0.0",
    "next": "^12.2.2",
    "next-compose-plugins": "^2.2.1",
    "next-contentlayer": "^0.2.6",
    "next-seo": "^5.4.0",
    "next-themes": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.10",
    "@types/node": "^16.11.43",
    "@types/react": "^18.0.15",
    "@types/slug": "^5.0.3",
    "@types/unist": "^2.0.6",
    "autoprefixer": "^10.4.7",
    "csstype": "^3.1.0",
    "eslint": "^8.19.0",
    "eslint-config-next": "^12.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-prettier": "^4.2.1",
    "hast": "^1.0.0",
    "mdast": "^3.0.0",
    "mdast-util-directive": "^2.2.1",
    "mdx-bundler": "^9.0.1",
    "next-sitemap": "^3.1.11",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "postcss": "^8.4.14",
    "prettier": "2.7.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.1.0",
    "rehype-prism-plus": "^1.4.2",
    "rehype-slug": "^5.0.1",
    "remark": "^14.0.2",
    "remark-directive": "^2.0.1",
    "remark-directive-rehype": "^0.4.0",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.1",
    "remark-mdx": "^2.1.2",
    "remark-mdx-images": "^1.0.3",
    "remark-mdx-remove-imports": "^1.6.22",
    "remark-parse": "^10.0.1",
    "remark-squeeze-paragraphs": "^5.0.1",
    "remark-unlink": "^4.0.1",
    "remark-unwrap-images": "^3.0.1",
    "simple-git": "^3.10.0",
    "slug": "^5.3.0",
    "tailwindcss": "^3.1.6",
    "type-fest": "^2.16.0",
    "typescript": "^4.6.4",
    "unified": "^10.1.2",
    "unist-builder": "^3.0.0",
    "unist-util-find-after": "^4.0.0",
    "unist-util-remove": "^3.1.0",
    "unist-util-select": "^4.0.1",
    "unist-util-visit": "^4.1.0",
    "unist-util-visit-parents": "^5.1.0"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "overrides": {
    "@contentlayer/core": "https://github.com/mshick/contentlayer/archive/refs/tags/v0.2.6-build.tar.gz"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}
