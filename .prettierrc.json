  "endOfLine": "lf",
  "trailingComma": "es5",
  "printWidth": 80,
  "singleQuote": true,
  "semi": false,
  "tabWidth": 2,
  "arrowParens": "always",
  "proseWrap": "always",
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "proseWrap": "always"
      }
    }
  ]
}
