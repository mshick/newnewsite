{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/next/tsconfig"
  ],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "#/.velite": [
        "./.velite"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "env": [
        "./env"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    ".contentlayer/generated",
    ".velite",
    "env"
  ],
  "exclude": [
    "node_modules",
    ".github",
    "public"
  ]
}
