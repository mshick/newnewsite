{
  "extends": [
    "@tsconfig/node20/tsconfig",
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/next/tsconfig"
  ],
  "compilerOptions": {
    "checkJs": false,
    "exactOptionalPropertyTypes": false,
    "strictNullChecks": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "_/.velite": [
        "./.velite"
      ],      
      "@/content": [
        "./lib/content"
      ],      
      "@/env": [
        "./env"
      ],
      "#/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.md",
    "**/*.mdx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    ".velite",
    ".search"
  ],
  "exclude": [
    "node_modules",
    ".github",
    "public"
  ]
}
