{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ],    
    "paths": {
      "#/*": ["./src/*"],
      "#/content": ["./.velite"],
      "contentlayer/generated": ["./.contentlayer/generated"],
      "env": ["./env"]
    }
  },
 "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.mts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    ".contentlayer/generated", 
    ".velite",
    "env"
  ],
  "exclude": [
    "node_modules",
    ".github",
    "public"
  ]
}
