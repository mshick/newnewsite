{
  "overrides": [
    {
      "files": ["**/*.md", "**/*.mdx"],
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:mdx/recommended"
      ],
      "settings": {
        "mdx/code-blocks": true,
        "mdx/language-mapper": {}
      },
      "globals": {
        "HomepagePostsList": true
      }
    },
    {
      "files": ["**/*.md/**"],
      "parserOptions": {
        "project": null
      }
    }
  ]
}
